<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Library</OutputType>
        <TargetFramework>net9.0</TargetFramework>
        <ImplicitUsings>disable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <Version>1.2.1</Version>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)' == 'Debug'">
        <DefineConstants>ERR</DefineConstants>
    </PropertyGroup>

    <PropertyGroup>
        <AssemblyName>AdamKnight.ToolKit</AssemblyName>
        <RootNamespace>AdamKnight.ToolKit</RootNamespace>
        <Title>AdamKnight.ToolKit</Title>
        <PackageId>AdamKnight.ToolKit</PackageId>
        <Authors>Adam Knight</Authors>
        <RepositoryUrl>https://github.com/adam-knt-pv/csharp-tool-kit</RepositoryUrl>
        <PackageLicenseFile>LICENSE</PackageLicenseFile>
        <PackageReadmeFile>README.md</PackageReadmeFile>
    </PropertyGroup>

    <ItemGroup>
        <None Include="../LICENSE" Pack="true" PackagePath=""/>
        <None Include="../README.md" Pack="true" PackagePath=""/>
    </ItemGroup>

</Project>
